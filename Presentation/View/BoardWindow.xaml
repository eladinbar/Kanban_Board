<Window x:Class="Presentation.View.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BoardWindow" Height="700" Width="1300">    
    <Grid>
        
        
        <TextBox Name="SearchBox" Text="Search for a task..." FontSize="12" FontStyle="Italic" BorderThickness="1" Height="25" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,0,0,0" 
                 Foreground="Gray" Background="{Binding}" TextChanged="SearchBox_TextChanged"/>
        <!--(Search: binding->grey->whiteOnClick, also for a text)-->
        
        
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Height="60" Width="200" Margin="0,-10,0,0">
            <Label Name="MainTitleLabel" Content="Kanban Board" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
            <Label x:Name="CurrentBoardEmailLabel" Content="{Binding Board.CreatorEmail}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Opacity="0.75" FontSize="12" Width="160" Height="30" Margin="0,-20"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="30" >
            <Label Name="CurrentUserEmailLabel1" Content="Current User:" FontWeight="Bold" FontSize="15" />
            <Label Name="CurrentUserEmailLabel2" Content="{Binding CurrentUser.Email}" HorizontalAlignment="Left" FontSize="15"/>
        </StackPanel>

        
        <Button Name="AddTaskButton" Content="+" FontWeight="ExtraBold" FontSize="40" FontFamily="David" Height="40" Width="40" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="2" 
                Background="{x:Null}" RenderTransformOrigin="0.5,0.5" BorderBrush="{x:Null}" Foreground="Black" MouseDoubleClick="AddTask_DoubleClick">
            <Button.BitmapEffect>
                <DropShadowBitmapEffect />
            </Button.BitmapEffect>
            <Button.ToolTip>
                <ToolTip>Add a new task</ToolTip>
            </Button.ToolTip>
            <!--<ContextMenu>
                <ContextMenu.Resources>
                    <Style TargetType="{x:Type Menu}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True" >
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ContextMenu.Resources>-->
            <!--</ContextMenu>-->
        </Button>
        
        
        <Menu Name="UserMenu" Height="40" Width="40" Margin="0,0,20,0" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#FF7EEA08" Foreground="Black">            
            <Menu.ToolTip>
                <ToolTip>
                    <TextBlock Text="{Binding CurrentUser.Nickname}" />
                </ToolTip>
            </Menu.ToolTip>
            
            <MenuItem x:Name="UserMenuItem" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="UltraBold" 
                  Background="{x:Null}" Height="40" Width="40" FontFamily="David" BorderBrush="Black" >
                <MenuItem.Header>
                    <TextBlock Text="{Binding CurrentUser.Nickname[0]}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
                </MenuItem.Header>
                <MenuItem Header="Change password" IsCheckable="True" FontSize="12" FontWeight="Regular" />
                <Separator />
                <MenuItem Header="Logout" IsCheckable="True" FontSize="12" FontWeight="Regular" Click="LogoutVerificationMessageBox"/>

            </MenuItem>
        </Menu>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="575" Width="1250">

            <ListBox Name="ColumnsListBox" ItemsSource="{Binding Board.Columns}" VerticalContentAlignment="Top" HorizontalContentAlignment="Stretch" BorderBrush="Red" BorderThickness="1" Width="1250"  ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Name="ColumnsListBoxPresentationDefinition" Orientation="Horizontal" HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <!--Selection border of each Column won't be visible-->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Focusable" Value="False"/>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>

                    <DataTemplate>
                        <Grid Name="TasksGrid">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" ></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <TextBox Name="ColumnName" Grid.Row="0" Text="{Binding Name}" Height="20" HorizontalAlignment="Center" FontWeight="Bold" BorderBrush="Orange" BorderThickness="1"/>

                            <ListBox Name="TasksListBox" Grid.Row="1" ItemsSource="{Binding Tasks, Mode=TwoWay}" BorderBrush="Green" BorderThickness="1" 
                                     ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" >

                                <!--SelectedItem="{Binding Path=DataContext.SelectedTask, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"-->

                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Name="TasksListBoxPresentationDefinition" Orientation="Vertical" Width="300" Height="525"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>

                                <!--Selection border of each Column won't be visible-->
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Focusable" Value="False"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Name="TaskInColumnBorder" BorderBrush="Purple" BorderThickness="1" Height="50" Width="290" HorizontalAlignment="Center">
                                            <Grid>
                                                <Button Name="AdvanceTask_Button" Content="->" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top" ToolTip="Advance task" MouseDoubleClick="AdvanceTask_DoubleClick"/>
                                                <!--IsEnabled="{Binding Path=DataContext.IsSelected, Mode=OneWay}"-->
                                                
                                                <TextBlock x:Name="TaskTitle" Text="{Binding Title}" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" >                                                    
                                                    
                                                    <!--<TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="{Binding Title}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=EditTask_Button}" Value="" >
                                                                    <Setter Property="Text" Value="{Binding Title}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>-->
                                                </TextBlock>
                                                
                                                <Button Name="EditTask_Button" Content="***" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="Edit task" MouseDoubleClick="EditTask_DoubleClick" />
                                                <TextBlock Name="TaskDueDate" Text="{Binding DueDate, StringFormat=dd/MM/yyyy}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>

                            </ListBox>

                        </Grid>
                    </DataTemplate>

                </ListBox.ItemTemplate>

            </ListBox>
        </StackPanel>

    </Grid>
</Window>
