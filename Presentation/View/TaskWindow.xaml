<Window x:Class="Presentation.View.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="Task Window" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <Grid Margin="0,0,-0.4,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Label Content="ID" FontSize="16" Grid.Column="0" Grid.Row="0"/>
                <Label Content="{Binding Path=ID}"  Grid.Column="1" Grid.Row="0" Margin="0,5,0,5"/>
                <Label Content="Title" FontSize="16" Grid.Column="0" Grid.Row="1"/>
                <TextBox Name="tTitle" Text="{Binding Path=Title, Mode=OneWay}" IsReadOnly="{Binding Path=!IsAssignee}" TextChanged="Title_Changed" BorderBrush="{Binding Path=TitleBorder}" Grid.Column="1" Grid.Row="1" Margin="0,5,0,5"/>
                <Label Content="Description" FontSize="16" Grid.Column="0" Grid.Row="2"/>
                <TextBox Name="tDescription" Text="{Binding Path=Description, Mode=OneWay}" TextChanged="Description_Changed" BorderBrush="{Binding Path=DescriptionBorder}" Grid.Column="1" Grid.Row="2" Margin="0,5,0,5"/>
                <Label Content="Due Date" FontSize="16" Grid.Column="0" Grid.Row="3"/>
                <DatePicker Name="dpDueDate" Text="{Binding Path=DueDate, Mode=OneWay}" DataContextChanged="DueDate_Changed" Grid.Column="1" Grid.Row="3" Margin="0,5,0,5"/>
                <Label Name="lMessage" Content="{Binding Path=dpMessage}" Foreground="Red" Grid.Column="2" Grid.Row="3"/>
                <Label Content="Creation Time" FontSize="16" Grid.Column="0" Grid.Row="4"/>
                <Label Content="{Binding Path=CreationTime}" Grid.Column="1" Grid.Row="4" Margin="0,5,0,5"/>
                <Label Content="Last Changed Date" FontSize="16" Grid.Column="0" Grid.Row="5"/>
                <Label Content="{Binding Path=LastChangedDate}" Grid.Column="1" Grid.Row="5" Margin="0,5,0,5"/>
                <Label Content="Task Assignee" FontSize="16" Grid.Column="1" Grid.Row="7" Margin="200,0,0,0"/>
                <TextBox Name="tTaskAssignee" Text="{Binding Path=TaskAssigneeUsername, Mode=OneWay}" TextChanged="TaskAssignee_Changed" Grid.Column="2" Grid.Row="7" Margin="0,5,0,5"/>
            </Grid>
            <StackPanel Orientation="Horizontal" Margin="243,30,240.6,0">
                <Button Content="Confirm Changes" x:Name="Confirm" Click="Confirm_Click" Margin="15" FontSize="16" Width="130"/>
                <Button Content="Cancel" x:Name="Cancel" Click="Cancel_Click" Margin="15" FontSize="16" Width="100" IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
